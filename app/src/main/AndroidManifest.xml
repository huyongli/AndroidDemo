<?xml version="1.0" encoding="utf-8"?>
<manifest package="cn.ittiger.demo"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"/>

    <!-- 屏幕唤醒 -->
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <!-- 屏幕熄灭 -->
    <user-permission android:name="android.permission.DEVICE_POWER"/>

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".RetrofitActivity">
        </activity>
        <activity android:name=".RecyclerViewActivity">
        </activity>
        <activity android:name=".RxJavaActivity">
        </activity>
        <service android:name=".service.RemoteService"
            android:process=":remote">
        </service>
        <service android:name=".service.LocalService"
                 android:process=":localService">
        </service>

        <receiver android:name=".service.ServiceReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
                <action android:name="android.intent.action.USER_PRESENT"/>
                <action android:name="android.intent.action.SCREEN_OFF"/>
                <action android:name="android.intent.action.SCREEN_ON"/>
                <action android:name="cn.ittiger.remoteservice"/>
            </intent-filter>
        </receiver>
        <receiver
            android:name=".service.AlarmReceiver"
            android:process=":remote"/>

        <activity android:name=".ViewDrawCacheActivity">
        </activity>
        <activity android:name=".Png9Activity">
        </activity>
    </application>

</manifest>
